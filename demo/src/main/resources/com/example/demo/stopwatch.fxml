<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.StopwatchController">
    <VBox alignment="CENTER" layoutX="92.0" layoutY="41.0" spacing="10.0">
        <Label fx:id="timeLabel" text="00:00:00" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startTimer" text="Start" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopTimer" text="Stop" />
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetTimer" text="Reset" />
        </HBox>
    </VBox>
</AnchorPane>
